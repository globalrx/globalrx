FROM --platform=linux/amd64 python:3.10.10-slim-buster as python-build

WORKDIR /app

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# g++ for Pillow
RUN apt-get update --fix-missing \
    && apt-get install -y nginx python-psycopg2 postgresql \
    libpq-dev gcc g++ firefox-esr unzip curl

# Install geckodriver for Firefox Selenium
# Compatibility chart: https://firefox-source-docs.mozilla.org/testing/geckodriver/Support.html
RUN curl -L https://github.com/mozilla/geckodriver/releases/download/v0.32.2/geckodriver-v0.32.2-linux64.tar.gz | tar xz -C /usr/local/bin
RUN chmod +x /usr/bin/firefox
# set display port to avoid Selenium crash
ENV DISPLAY=:99

# Python requirements
COPY requirements.txt /app
COPY requirements-dev.txt /app
RUN pip install -r requirements-dev.txt

# Setup app
# Previously was using a volume like local dev since we already checked out the whole repo,
# but tests were crashing (ValueError: Path /github_workspace/api/bert_models/S-PubMedBert-MS-MARCO not found)
# For some reason it was hitting the Django setup before the entrypoint ran, or the entrypoint was not running.
# Now copying everything and trying to load the model within the Dockerfile
COPY . /app
# Can't use Django management commands because they require .env
# Maybe we eventually split out settings into settings/base.py, settings/test.py etc
# For now, separate script for this ...
RUN python3 /app/api/bert_models/load.py

EXPOSE 8000 5000

CMD /app/entrypoint